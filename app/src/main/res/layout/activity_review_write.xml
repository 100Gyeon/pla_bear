<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".board.review.ReviewWriteActivity"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="12dp"
            android:text="별점" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:paddingLeft="6dp"
            android:rating="3"
            android:stepSize="0.5"
            android:isIndicator="false"
            android:id="@+id/review_rating"
            android:theme="@style/RatingBar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="닉네임" />
        <TextView
            android:id="@+id/review_nickname"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="6dp"
            android:textSize="18sp"
            android:text=" 님"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/review_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:hint="내용을 입력하세요."
        android:layout_marginTop="12dp"
        />

    <LinearLayout
        android:id="@+id/image_upload_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.pla_bear.board.review.SquareImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/noimage"
            />
        <com.pla_bear.board.review.SquareImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/noimage"
            />
        <com.pla_bear.board.review.SquareImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/noimage"
            />
    </LinearLayout>

    <Button
        android:id="@+id/review_submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/review_submit"
        android:background="#85C8FA"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:textColor="#FFFFFF" />
</LinearLayout>