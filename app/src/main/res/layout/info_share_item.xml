<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    app:cardCornerRadius="3dp"
    android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/info_update_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/edit"
                android:contentDescription="@string/desc_info_update_btn" />

            <ImageButton
                android:id="@+id/info_delete_btn"
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/delete"
                android:contentDescription="@string/desc_info_delete_btn" />
        </LinearLayout>
            <TextView
                android:id="@+id/board_name_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:text=""
                android:textColor="#000"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="150dp"
                android:maxHeight="150dp"
                android:adjustViewBounds="true"
                android:id="@+id/board_image_imageView"
                android:layout_gravity="center"
                android:contentDescription="@string/desc_board_image"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/board_content_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text=""
                android:textColor="#000"
                android:textSize="15sp" />
        </LinearLayout>
</androidx.cardview.widget.CardView>