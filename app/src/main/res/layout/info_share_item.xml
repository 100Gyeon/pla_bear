<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    app:cardCornerRadius="3dp"
    android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/board_name_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="end"
                    android:paddingTop="8dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/info_update_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/edit"
                    android:contentDescription="@string/desc_info_update_btn" />

                <ImageButton
                    android:id="@+id/info_delete_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_marginStart="15dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/delete"
                    android:contentDescription="@string/desc_info_delete_btn" />
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="150dp"
                android:maxHeight="150dp"
                android:layout_marginTop="16dp"
                android:adjustViewBounds="true"
                android:id="@+id/board_image_imageView"
                android:layout_gravity="center"
                android:contentDescription="@string/desc_board_image"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/board_content_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text=""
                android:textColor="#000"
                android:textSize="15sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>