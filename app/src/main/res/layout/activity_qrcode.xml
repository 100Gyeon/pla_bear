<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="일회용 플라스틱을 소비하지 않을 권리,\u000a플라베어가 지켜드립니다."
        android:background="@android:color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/darker_gray">
        <TextView
            android:id="@+id/qrcode_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:layout_marginTop="36dp" />
        <ImageView
            android:id="@+id/qrcode_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/qrcode_title"
            android:src="@drawable/pass"
            android:adjustViewBounds="true"
            android:maxHeight="350dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_below="@id/qrcode_result"
            android:layout_centerHorizontal="true"
            android:textSize="28sp"
            android:textStyle="bold"
            android:id="@+id/qrcode_message" />
        <TextView
            android:id="@+id/qrcode_description"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:layout_below="@id/qrcode_message"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />
    </RelativeLayout>
</LinearLayout>